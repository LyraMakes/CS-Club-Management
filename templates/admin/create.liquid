<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <link rel="stylesheet" href="/style.css">
    <script>
        function togglePassword() {
            var x = document.getElementById("UserID");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
</head>
<body>
    {% render "navbar.liquid" %}
    <br>
    <form action="/admin/users/create" method="post">
    <label for="userName">Name</label>
    <input type="text" name="userName" id="userName"> <br><br>
    <label for="UserID">User ID</label>
    <input type="password" name="UserID" id="UserID"> <input type="checkbox" onclick="togglePassword()"> Show Password<br><br>
    <label for="emailID">Email</label>
    <input type="email" name="emailID" id="emailID"><br><br>
    <h1>Permissions</h1>
    <table>
        <tr>
            <th colspan="3">Invoices</th>
            <th colspan="3">Docket</th>
            <th>Admin</th>
            <th colspan="2">User Settings</th>
        </tr>
        <tr>
            <th>R</th>
            <th>W</th>
            <th>A</th>
            <th>R</th>
            <th>W</th>
            <th>A</th>
            <th>U</th>
            <th>Approve</th>
            <th>Emails</th>
        </tr>
        <tr>
            <th><input type="checkbox" name="RI" id="RI"></th>
            <th><input type="checkbox" name="EI" id="EI"></th>
            <th><input type="checkbox" name="AI" id="AI"></th>
            <th><input type="checkbox" name="RD" id="RD"></th>
            <th><input type="checkbox" name="ED" id="ED"></th>
            <th><input type="checkbox" name="AD" id="AD"></th>
            <th><input type="checkbox" name="UA" id="UA"></th>
            <th><input type="checkbox" name="AP" id="AP"></th>
            <th><input type="checkbox" name="RE" id="RE"></th>

        </tr>
    </table>

    <input type="submit" value="Create User">
    </form>
</body>
</html>